/* pages/add/add.wxss */
/* --------- 公共样式---------  */
.bg {
  width: 100vw;
  background-color: #EDECE8;
}
.full {
  width: 4vw;
  height: 100%;
}
.headView {
  width: 70%;
  height: 3.5vh;
  font-size: 30rpx;
  border-bottom: 3rpx solid #AEAEAC;
  /* background-color: #EDECE8; */
}

/* --------- 基本信息---------  */
.mainView_1 {
  width: 100%;

  display: flex;
  flex-direction: row;
  margin-bottom: 3vh;
  background-color: white;
}
.classView_1 {
  width: 96%;

  display: flex;
  flex-direction: column;
}
.blockView_1 {
  width: 100%;
  height: 7vh;

  display: flex;
  flex-direction: row;
}
.full_1 {
  width: 92%;
  height: 3rpx;
  
  background-color: #AEAEAC;
}
.title_1 {
  width: 20%;
  height: 60%;

  margin-top: 1.4vh;
  /* background-color: gray; */
}
.inputView_1 {
  width: 68%;
  height: 60%;

  /* margin-left: 4%; */
  margin-top: 1.4vh;
  background-color: #EDECE8;
}
.pickView {
  width: 25%;
  height: 60%;

  margin-right:3%;
  margin-top: 1.4vh;
  background-color: #EDECE8;
}
/* --------- 价格信息---------  */
.mainView_2 {
  width: 100%;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 3vh;
  background-color: white;
}
.classView_2 {
  width: 47.8%;

  display: flex;
  flex-direction: row;
}
.localView_2 {
  width:96%;

  display: flex;
  flex-direction: column;
  /* background-color: yellow; */
}
.blockView_2 {
  width: 100%;
  height: 7vh;

  display: flex;
  flex-direction: row;
  /* background-color: royalblue; */
}
.title_2 {
  width: 50%;
  height: 60%;
  margin-top: 1.4vh;
}
.inputView_2 {
  width: 50%;
  height: 60%;

  margin-top: 1.4vh;
  background-color: #EDECE8;
}
