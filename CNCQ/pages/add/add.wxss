/* --------- 保存按钮 删除按钮--------  */
.save {
  width: 30%;
  height: 5vh;

  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-left: 35%;
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  background-color: red;
}
