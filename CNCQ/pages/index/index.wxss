/**index.wxss**/
/*     顶部view   */
.setView {
  position: fixed; 
  display: flex;
  flex-direction: row;
  align-items: center;

  width: 100%;
  height: 30px;
  top: 0px; 
  z-index: 4;
  background-color: #FFE754;
  opacity: 0.9;
}
/*     顶部view 左部分   */
.leftView {
  width: 33%;
  height: 100%;
}
/*     顶部view 中部分   */
.middleView {
  width: 34%;
  height: 100%;
  
}
/*     顶部view 右部分   */
.rightView {
  width: 33%;
  height: 100%;

  display: flex;
  flex-direction: row-reverse;
  margin-right: 10rpx;
  align-items: center;
}
/*     顶部view 左部分 列表按钮   */
.listView {
  width: 50%;
  height: 100%;
}
/*     顶部view 左部分 列表按钮→列表  */
.class_view {
  width: 30%;
  height: 60px;

  position: absolute;
  top: 30px;
}
.list_icon {
  width: 80%;
  height: 30px;
  
}
.class_view_one {
  width: 100%;
  height: 30px;

  border-bottom: 2px solid gainsboro;
  background-color: gold;
}
/*     顶部view 右部分 用户头像   */
.userinfo_image {
  width: 30px;
  height: 30px;
  
  margin: 20rpx;
  border-radius: 50%;
}
/*     顶部view 右部分 用户昵称   */
.userinfo_nickname {
  font-size: 13px;
  color: #aaa;
}


/*     主框架滚动view框架   */
.scroll_view {
  width: 100%;
  height: 100%;
  background-color: #ECECEA;
}
/*     商品大类view   */
.goods_view {
  width: 100%;
  margin-bottom: 10px;
  background-color: #ECECEA;
}
/*     商品大类标题   */
.head_view {
  width: 100%;
  height: 30px;

  
  background-color: #FFE754;
  text-align: center;
}
/*     商品view主框   */
.detial_view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: 70px;
  background-color: gold;
  margin-top: 10px;
}
/*     商品名称   */
.title_view {
  width: 35%;
  height: 50%;
  background-color: white;/*white*/
  /* text-align: center; */
}
/*     商品货价view   */
.price_view {
  display: flex;
  flex-direction: row;

  width: 65%;
  height: 50%;
  background-color: white;
}
/*     商品价格view   */
.price_text {
  position: relative;
  top: 15%;
  width: 25%;
  height: 25px;
  font-size: 13px;

  /* background-color: red; */
}
.price_num {
  position: relative;
  top: 15%;
  width: 25%;
  height: 25px;
  font-size: 13px;
  color: red;
}
/*     商品其他信息view   */
.other_view {
  width: 35%;
  height: 50%;
  background-color: white;/*white*/
}
.other_view_two {
  font-size: 13px;
  color: gray;
}
/*     添加入结算按钮   */
.addGood_view {
  position: relative;
  left: 10px;
  top: 8%;

  width: 50px;
  height: 25px;
  
  font-size: 18px;
  color: white;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;

  background-color: red;
  border-radius: 5px;
}
/*     商品详细信息页面   */
.detial_view_detial {
  width: 90%;
  height: 420rpx;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: fixed;
  bottom: 35%;
  left: 5%;
  z-index: 2;
  font-size: 17px;
}
.dvd_goods_Name {
  width: 40%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  border-top-left-radius: 5px;
  border-bottom: 2rpx solid gainsboro;
  background-color: #CFE36F;
  font-size: 22px;
}
.dvd_goods_Model {
  width: 60%;
  height: 60rpx;
  border-top-right-radius: 5px;
  border-bottom: 2rpx solid gainsboro;
  background-color: #CFE36F;
  font-size: 20px;
}
.dvd_good {
  width: 42%;
  height: 60rpx;
  border-bottom: 2rpx solid gainsboro;
  background-color: #CFE36F;
}
.dvd_good_One{
  position: relative;
  width: 36%;
  height: 60rpx;
  border-bottom: 2rpx solid gainsboro;
  background-color: #CFE36F;
}
.dvd_good_num {
  width: 22%;
  height: 60rpx;
  border-bottom: 2rpx solid gainsboro;
  /* border-left: 1px solid gainsboro;
  border-right: 1px solid gainsboro; */
  background-color: #CFE36F;
}
.dvd_good_other {
  width: 100%;
  height: 60rpx;
  border-bottom: 2rpx solid gainsboro;
  background-color: #CFE36F;
}
.dvd_good_other_phone {
  width: 100%;
  height: 60rpx;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  background-color: #CFE36F;
}
.alter {
  width: 100%;
  height: 60rpx;

  position: absolute;
  right: -40%;
  top: 80%;
}
/*     右侧快速跳转主框架view   */
.kindsOf_view {
  position: fixed;
  display: flex;
  flex-direction: row-reverse;
  flex-wrap: wrap;

  width: 6rem;
  height: 20rem;

  bottom: 25%;
  right: 5%;

   /* background-color: burlywood;  */
}
/*     按钮类框架view   */
.kind_views {
  width: 6rem;
  height: 18rem;

  display: flex;
  flex-direction: column;
  flex-wrap: wrap-reverse;
  /* align-content: space-around; */

   /* background-color: red;  */
}
/*     类名跳转view   */
.kind_view {
  width: 2.2rem;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;

  margin-bottom: 20rpx; 
  margin-right: 0rpx;
  margin-left: 20rpx; 

  
  border-radius: 5px;
}
/*     类名跳转按钮   */
.listText_view {
  width: 2.2rem;
  height: 100%;
  color: black;
  
  border-radius: 5px;

  opacity: 0.9;
  background-color: gold;
}
.listText_view text{
  width: 50%;
  opacity: 1;
  font-size: 14px;
}
/*     隐藏按钮   */
 .hide_view {
  /* position: fixed; */

  width: 2.2rem;
  height: 2.2rem;
  /* bottom: 20%;
  right: 5%; */
  border-radius: 5px;
  opacity: 1;
  background-color: gold;
} 
.hide_icon {
  width: 100%;
  height: 100%;
  opacity: 1;
}
.dataViewButton {
  position: fixed;
  bottom: 15%;
  right: 5%;

  width: 2.2rem;
  height: 2.2rem;
  
  border-radius: 5px;

  opacity: 0.9;

  background-color: gold;
}
.addIcon {
  width: 100%;
  height: 100%;
  opacity: 1;
}
.refresh {
  position: fixed;
  bottom: 5%;
  right: 5%;

  width: 2.2rem;
  height: 2.2rem;
  
  border-radius: 5px;

  opacity: 0.9;

  background-color: gold;
}