.setView {
  width: 100%;
  height: 8vh;

  display: flex;
  flex-direction: row;

  background-color: #ECECEC;
}
.name {
  width: 15%;
  height: 4vh;
  margin-top: 2vh;
  margin-left: 5%;
  /* background-color: red; */
}
.write {
  width: 55%;
  height: 5vh;

  border: 2rpx solid #ECECEC;
  border-radius: 15rpx;
  margin-top: 1.5vh;
  background-color: white;
}
.enter {
  width: 15%;
  height: 4.5vh;

  text-align: center;
  margin-top: 1.75vh;
  margin-left: 5%;
  border: 2rpx solid #ECECEC;
  border-radius: 35rpx;

  background-color: gold;
}